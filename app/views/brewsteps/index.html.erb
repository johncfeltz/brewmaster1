<h1>Listing brewsteps</h1>

<table>
  <tr>
    <th>Action</th>
    <th>Observation</th>
    <th>Batch</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brewsteps.each do |brewstep| %>
  <tr>
    <td><%= brewstep.action %></td>
    <td><%= brewstep.observation %></td>
    <td><%= brewstep.batch_id %></td>
    <td><%= link_to 'Show', brewstep %></td>
    <td><%= link_to 'Edit', edit_brewstep_path(brewstep) %></td>
    <td><%= link_to 'Destroy', brewstep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

